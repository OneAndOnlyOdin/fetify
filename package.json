  "scripts": {
    "prebuild": "yarn run clean",
    "build": "tsc",
    "build:web": "env-cmd -f build.env webpack --config webpack.config.js",
    "clean": "rimraf build",
    "web": "env-cmd -f local.env webpack --config webpack.config.js --watch",
    "serve": "env-cmd -f local.env webpack-dev-server --host 127.0.0.1 --config webpack.config.js --watch",
    "start": "node .",
    "build:docker": "docker build -t fetify:latest .",
    "db:recreate": "yarn db:remove || true && yarn db:start && sleep 2s && yarn db:init",
    "// Create an empty database with no migrations": "",
    "db:empty": "yarn db:remove || true && yarn db:start && sleep 2s && yarn db:init",
    "// Database helpers": "",
    "db:start": "docker run --name fetdb -d  --restart=always -p 27017:27017 mongo:4.0 mongod --replSet rs0 --bind_ip 0.0.0.0 && sleep 5s",
    "db:init": "docker exec -it fetdb mongo --eval \"rs.initiate()\" && sleep 5s",
    "db:shell": "docker exec -it fetdb mongo",
    "db:kill": "docker kill fetdb",
    "db:remove": "docker container rm -f -v fetdb",
    "db:reconfig": "sleep 5s && docker exec -it fetdb mongo --eval \"cfg = rs.config(); cfg.members = [{ _id: 0, host: '127.0.0.1:27017' }]; rs.reconfig(cfg, { force: true });\""
  },
