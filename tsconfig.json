{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "inlineSourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "suppressImplicitAnyIndexErrors": true
  },
  "include": ["src/**/*.ts", "web/**/*.ts"]
}
